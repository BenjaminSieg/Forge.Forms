<UserControl
    x:Class="Forge.Forms.Controls.DynamicFormWrapper"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Forge.Forms.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="300"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <local:DynamicForm
        x:Name="Form"
        Width="{Binding Width}"
        Height="{Binding Height}"
        Margin="{Binding Padding}"
        FontSize="{Binding TextFontSize}"
        local:TextProperties.HeadingFontSize="{Binding HeadingFontSize}"
        local:TextProperties.TextFontSize="{Binding TextFontSize}"
        local:TextProperties.TitleFontSize="{Binding TitleFontSize}" />
</UserControl>